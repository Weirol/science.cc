local CoreGui = game:GetService("CoreGui")

local Luna = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Luna-Interface-Suite/master/source.lua"))()

local Window = Luna:CreateWindow({
    Name = "Science.cc",
    Subtitle = "Main Loader",
    Config = "ScienceLoaderConfig",
    KeySystem = false,
    LoadingEnabled = false
})

local Tab = Window:CreateTab({ Name = "Games" })

local function LaunchScript(url)
    Luna:Notification({
        Title = "Loader",
        Content = "Launching script...",
        Time = 1
    })
    
    task.wait(1)
    
    local gui = CoreGui:FindFirstChild("Luna")
    if gui then
        gui:Destroy()
    end
    
    loadstring(game:HttpGet(url))()
end

Tab:CreateSection("Scripts")

Tab:CreateButton({
    Name = "Blade Ball",
    Callback = function()
        LaunchScript("https://raw.githubusercontent.com/Weirol/science.cc/refs/heads/main/Blade%20Ball")
    end
})

Tab:CreateButton({
    Name = "Standblox",
    Callback = function()
        LaunchScript("https://raw.githubusercontent.com/Weirol/science.cc/refs/heads/main/Standblox")
    end
})

Tab:CreateButton({
    Name = "Drive World",
    Callback = function()
        LaunchScript("https://raw.githubusercontent.com/Weirol/science.cc/refs/heads/main/Drive World")
    end
})

Tab:CreateButton({
    Name = "Universal",
    Callback = function()
        LaunchScript("https://raw.githubusercontent.com/Weirol/science.cc/refs/heads/main/Universal")
    end
})

Luna:Notification({
    Title = "Science.cc",
    Content = "Loader initialized",
    Time = 3
})
